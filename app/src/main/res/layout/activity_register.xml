<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="registerViewModel"
            type="com.example.myapplication.viewmodel.RegisterViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:contentDescription="Logo App"
            app:srcCompat="@drawable/logo"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_background"
            android:hint="Username"
            android:text="@={registerViewModel.username}"
            android:inputType="text"
            android:padding="10dp"
            app:backgroundTint="@null"
            tools:ignore="Autofill, HardcodedText" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_background"
            android:hint="Name"
            android:inputType="text"
            android:text="@={registerViewModel.name}"
            android:padding="10dp"
            app:backgroundTint="@null"
            tools:ignore="Autofill, HardcodedText" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_background"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:text="@={registerViewModel.email}"
            app:backgroundTint="@null"
            tools:ignore="Autofill, HardcodedText" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_background"
            android:hint="Password"
            android:inputType="textPassword"
            android:text="@={registerViewModel.password}"
            android:padding="10dp"
            app:backgroundTint="@null"
            tools:ignore="Autofill, HardcodedText" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="Register"
            android:textColor="@color/black"
            app:backgroundTint="@null"
            android:onClick="@{()->registerViewModel.onRegister()}"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/login_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Already a user? Login"
            android:onClick="@{()->registerViewModel.toLogin()}"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</layout>